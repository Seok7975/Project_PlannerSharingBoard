<script>
function checkUserID() {
    var userID = $('#userID').val();
    $.ajax({
        url: 'checkUserID.jsp',
        type: 'POST',
        data: { userID: userID },
        success: function(result) {
            if (result.trim() == '1') {
                $('#userIDFeedback').text('아이디가 이미 존재합니다.').css('color', 'red');
            } else {
                $('#userIDFeedback').text('아이디 사용 가능').css('color', 'green');
            }
        }
    });
}
</script>
