/* 네비게이션 바를 상단에 고정 */
.navbar-fixed-top {
    position: fixed;
    top: 0;
    width: 100%; 
    z-index: 1000;
}

/* 왼쪽 사이드바 스타일 */
.sidebar {
    position: fixed;
    top: 50px; /* 네비게이션 바 높이만큼 아래로 내림 */
    left: 0;
    width: 155px;
    height: calc(100% - 50px); /* 네비게이션 바 높이만큼 줄임 */
    background-color: #f8f8f8;
    padding-top: 20px;
    border-right: 1px solid #ddd;
    transition: width 0.3s ease, opacity 0.3s ease; /* 사이드바 너비와 투명도 변화 애니메이션 */
    /* overflow: hidden; */
}

/* 작은 화면에서 사이드바 숨기기 */
@media (max-width: 768px) {
    .sidebar {
        left: -250px;
    }
}

/* 사이드바가 보일 때 클래스 */
.sidebar.show {
    left: 0;
}

/* 메인 콘텐츠 스타일 */
.main-content {
    margin-left: 155px; /* 기본 사이드바 너비만큼 마진 */
    transition: margin-left 0.3s;
}

/* 작은 화면에서 메인 콘텐츠 마진 조정 */
@media (max-width: 768px) {
    .main-content {
        margin-left: 0;
    }
}

